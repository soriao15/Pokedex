<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="104dp"
        android:layout_height="127dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/pokemon_title_label"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_hp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
         />

    <TextView
        android:id="@+id/pokemon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/pokemon_title_label"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemon_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_stats_label"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_height" />

    <TextView
        android:id="@+id/pokemon_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_category"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/pokemon_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintTop_toBottomOf="@id/pokemon_hp"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_spattack"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <TextView
        android:id="@+id/pokemon_spattack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintTop_toBottomOf="@id/pokemon_attack"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_defense"
        app:layout_constraintLeft_toLeftOf="parent"

         />

    <TextView
        android:id="@+id/pokemon_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintTop_toBottomOf="@id/pokemon_spattack"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_spdefense"
        app:layout_constraintLeft_toLeftOf="parent"

         />

    <TextView
        android:id="@+id/pokemon_spdefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_speed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_defense"

         />

    <TextView
        android:id="@+id/pokemon_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_spdefense" />

    <TextView
        android:id="@+id/pokemon_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_attack"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"

         />

    <TextView
        android:id="@+id/pokemon_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/pokemon_title_label"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_title"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"

        tools:layout_editor_absoluteX="162dp" />


</android.support.constraint.ConstraintLayout>